<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.module.merchant.mapper.UserMapper">

    <!--按条件查询用户信息-->
    <select id="searchUsers"  parameterType="user" resultType="user">
      select * from tc_user
        <where>
            <if test="id != null">
                AND id = ${id}
            </if>
            <if test="name != null">
                AND name = ${name}
            </if>
        </where>
    </select>

    <!--按条件查询用户信息-->
    <select id="selectByName"  parameterType="string" resultType="user">
        select *,role_id as roleId from tc_user
        <where>
            <if test="name != null">
                AND name = '${name}'
            </if>
        </where>
    </select>

    <insert id="insertUser" parameterType="User">
        INSERT INTO  tc_user (name,age,password,email) VALUE ('${name}','${age}','${passWord}','${email}')
    </insert>

    <delete id="deleteUser">
        DELETE FROM  tc_user
        <where>
            <if test="id != null">
                AND id = ${id}
            </if>
            <if test="name != null">
                AND name = ${name}
            </if>
            <if test="age != null">
                AND age = ${age}
            </if>
        </where>
    </delete>

    <delete id="updateById" parameterType="User">
        UPDATE tc_user
        <set>
            <if test="name != null">name=#{name},</if>
            <if test="age != null">age=#{age},</if>
        </set>
        where id = ${id}
    </delete>
</mapper>
